{% extends 'CoreAdminBundle:admin:layout.html.twig' %}
{% block content %}
    
    <div class="container">

        <div class="hero-unit">
            <h1>Usuarios :: Pendientes</h1>
            <p>{{ mensaje }}</p>
        </div>

        <form name="zd_form" method="POST" action="{{ path('admin_usuarios_listar_unreg', {session: session, offset: 1}) }}">
            <table border="0" width="80%" align="center">
                <tr>
                    <th align="right" valign="top"><font size="4"><input type="text" name="q" placeholder="Buscar..." value="" style="height:30px; width: 200px;" required/></font> <input type="submit" name="entrar" style="height:25px; width: 70px;" value="Buscar"></th>
                    </th>
                </tr>
            </table>
        </form>

        <div>&nbsp;</div>

        <div class="row">
            <table id="listuser" border="" width="79%" align="center">
                <tr>
                    <th style="background-color:#333; color:#fff;" align="left";>Paginas: 
                {% for i in range(1, total_pages) %}
                    <a href="{{ path('admin_usuarios_listar_unreg', {session: session, offset: i}) }}">&nbsp;{{ i }}&nbsp;</a>
                {% endfor %}
                    </th>
                </tr>
            </table>
            <table id="listuser" border="1" width="85%" align="center">
                <tr>
                    <th width="5%">ID</th>
                    <th width="25%">Nombre</th>
                    <th width="15%">Usuario</th>
                    <th width="10%">Matricula</th>
                    <th width="15%">E-mail</th>
                    <th width="20%">Fecha</th>
                    <!--<th width="5%">Editar</th>
                    <th width="5%">Eliminar</th>-->
                </tr>
                {% set i = 1 %}
                {% for usuario in usuarios %}
                <tr>
                    <td>{{ i }}</td>
                    <td>{{ usuario.firstname }} {{ usuario.secondname }}</td>
                     <td>{{ usuario.username }}</td>
                     <td>{{ usuario.genpass }}</td>
                     <td>{{ usuario.email }}</td>
                     <td>{{ usuario.fecha|date("m/d/Y") }}</td>
                    <!--<td align="center"><a href="{{ path('admin_usuarios_modificar', {session: session_id, id: usuario.id}) }}"><img src="{{ asset('bundles/core/img/users/edit.png') }}" width="32px"></a></td>
                    <td align="center"><a href="{{ path('admin_usuarios_eliminar', {session: session_id, id: usuario.id}) }}"><img src="{{ asset('bundles/core/img/users/del.png') }}" width="32px"></a></td>-->
                </tr>
                {% set i = i + 1 %}
                {% endfor %}
            </table>
            <table id="listuser" border="" width="79%" align="center">
                <tr>
                    <th style="background-color:#333; color:#fff;" align="left";>Paginas: 
                {% for i in range(1, total_pages) %}
                    <a href="{{ path('admin_usuarios_listar_unreg', {session: session, offset: i}) }}">&nbsp;{{ i }}&nbsp;</a>
                {% endfor %}
                    </th>
                </tr>
            </table>
        </div>
        <hr>

        <footer></footer>

    </div>

{% endblock %}