{% extends 'CoreAdminBundle:admin:layout.html.twig' %}
{% block content %}
    
    <div class="container">

        <div class="hero-unit">
            <h1>Usuarios :: Pendientes</h1>
            <p>{{ mensaje }}</p>
        </div>

        <div class="row">
            <table id="listuser" border="1" width="85%" align="center">
                <tr>
                    <th width="5%">ID</th>
                    <th width="25%">Nombre</th>
                    <th width="15%">Usuario</th>
                    <th width="10%">Matricula</th>
                    <th width="15%">E-mail</th>
                    <th width="20%">Fecha</th>
                    <!--<th width="5%">Editar</th>
                    <th width="5%">Eliminar</th>-->
                </tr>
                {% set i = 1 %}
                {% for usuario in usuarios %}
                <tr>
                    <td>{{ i }}</td>
                    <td>{{ usuario.firstname }} {{ usuario.secondname }}</td>
                     <td>{{ usuario.username }}</td>
                     <td>{{ usuario.genpass }}</td>
                     <td>{{ usuario.email }}</td>
                     <td>{{ usuario.fecha|date("m/d/Y") }}</td>
                    <!--<td align="center"><a href="{{ path('admin_usuarios_modificar', {session: session_id, id: usuario.id}) }}"><img src="{{ asset('bundles/core/img/users/edit.png') }}" width="32px"></a></td>
                    <td align="center"><a href="{{ path('admin_usuarios_eliminar', {session: session_id, id: usuario.id}) }}"><img src="{{ asset('bundles/core/img/users/del.png') }}" width="32px"></a></td>-->
                </tr>
                {% set i = i + 1 %}
                {% endfor %}
            </table>
        </div>
        <hr>

        <footer></footer>

    </div>

{% endblock %}