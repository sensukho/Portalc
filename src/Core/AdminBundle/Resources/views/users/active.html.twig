{% extends 'CoreAdminBundle:admin:layout.html.twig' %}
{% block refresh %}<meta http-equiv="refresh" content="30">{% endblock %}
{% block content %}
    
    <div class="container">

        <div class="hero-unit">
            <h1>Usuarios :: Activos</h1>
            <p></p>
        </div>

        <div class="row">
            <table id="listuser" border="1" width="800px" align="center">
                <tr>
                    <th width="4%">#</th>
                    <th width="31%">Usuario(IP)</th>
                    <th width="25%">MAC</th>
                    <th width="10%">T. Act</th>
                    <th width="15%">IN (Mb)</th>
                    <th width="15%">OUT (Mb)</th>
                </tr>
                {% for usuario in usuarios %}
                <tr>
                    <th>{{ usuario.id }}</th>
                    <th align="left">&nbsp;&nbsp;&nbsp;{{ usuario.username }} ( {{ usuario.framedipaddress }} )</th>
                    <th>{{ usuario.callingstationid }}</th>
                    <th> --- </th>
                    <th>{{ usuario.acctinputoctets }}</th>
                    <th>{{ usuario.acctoutputoctets }}</th>
                </tr>
                {% endfor %}
            </table>
        </div>
        <hr>

        <footer></footer>

    </div>

{% endblock %}